{
  "name": "@jhae/stylelint-config-standard-scss",
  "description": "A standard SCSS config for Stylelint.",
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "JHAE",
    "url": "https://github.com/jhae-de"
  },
  "homepage": "https://github.com/jhae-de/stylelint-config-standard-scss",
  "repository": {
    "url": "git+https://github.com/jhae-de/stylelint-config-standard-scss.git",
    "type": "git"
  },
  "type": "module",
  "main": "./index.yaml",
  "files": [
    "./index.yaml"
  ],
  "scripts": {
    "fix": "npm run-script fix:prettier && npm run-script fix:eslint",
    "fix:eslint": "eslint --fix .",
    "fix:prettier": "prettier --write .",
    "lint": "npm run-script lint:prettier && npm run-script lint:eslint",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest",
    "test:watch": "npm run-script test -- --watchAll"
  },
  "dependencies": {
    "stylelint": "^16.24",
    "stylelint-config-standard-scss": "^16.0",
    "stylelint-scss": "^6.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.22",
    "@jhae/stylelint-config-verifier": "^1.3",
    "@types/jest": "^30.0",
    "eslint": "^9.22",
    "eslint-config-prettier": "^10.0",
    "eslint-plugin-prettier": "^5.1",
    "jest": "^30.0",
    "prettier": "^3.0",
    "ts-jest": "^29.4",
    "typescript": "^5.0",
    "typescript-eslint": "^8.42"
  },
  "keywords": [
    "config",
    "configuration",
    "css",
    "rule",
    "rules",
    "scss",
    "standard",
    "stylelint",
    "stylelint-config",
    "stylelint-scss",
    "stylelintrc"
  ]
}
